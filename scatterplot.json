{
  "width": 400,
  "height": 400,
  "data": [
    {
      "name": "slu-cbd",
      "url": "SLU-19_CBD-13.csv",
      "format": {
        "type": "csv",
        "parse": {
            "starttime": "date:'%m/%d/%Y %H:%M'",
            "tripduration": "number",
            "tripdate": "string"
          }
        }
      }
    ],
    "scales": [
      {
        "name": "xscale",
        "type": "linear",
        "domain": {
          "data": "slu-cbd",
          "field": ["starttime", "tripduration"]
        },
        "range": "width",
        "nice": true
      },
      {
        "name": "yscale",
        "type": "linear",
        "domain": {
          "data": "slu-cbd",
          "field": ["starttime", "tripduration"]
        },
        "range": "height",
        "nice": true
      }
    ],
    "axes": [
      {
        "type": "x",
        "scale": "xscale",
        "orient": "bottom",
        "title": "Start date"
      },
      {
        "type": "y",
        "scale": "yscale",
        "orient": "left",
        "title": "Trip Duration"
      }
    ],
    "marks": [
      {
        "type": "symbol",
        "from": {
          "data": "slu-cbd"
        },
        "properties": {
          "enter": {
            "x": {
              "field": "starttime",
              "scale": "xscale"
            },
            "y": {
              "field": "tripduration",
              "scale": "yscale"
            },
            "size": {"value": 49},
            "fill": {"value": "#3182bd"},
            "opacity": {"value": 0.7}
          },
          "update": {
            "fill": {"value": "#3182bd"}
          },
          "hover": {
            "fill": {"value": "#de2d26"}
          }
        }
      },
      {
        "type": "text",
        "properties": {
          "enter": {
            "fill": {"value": "black"}
          },
          "update": {
            "x": {
              "scale": "xscale",
              "signal": "hover.starttime",
              "offset": 5
            },
            "y": {
              "scale": "yscale",
              "signal": "hover.tripduration",
              "offset": -5
            },
            "text": {"signal": "hover.tripdate"}
        }
      }
    }
  ],
  "signals": [
    {
      "name": "hover",
      "init": {},
      "streams": [
        {"type": "symbol:mouseover", "expr": "datum"},
        {"type": "symbol:mouseout", "expr": "{}"}
      ]
    }
  ]
}
